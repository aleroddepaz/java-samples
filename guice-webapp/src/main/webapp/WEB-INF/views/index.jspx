<html xmlns:c="http://java.sun.com/jsp/jstl/core"
  xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
  xmlns:jsp="http://java.sun.com/JSP/Page">
<head>
<title>To-Do webapp</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
<link rel="stylesheet" href="${pageContext.request.contextPath}/main.css" />
<jsp:directive.page contentType="text/html;charset=utf-8" />
<jsp:output omit-xml-declaration="yes" />
</head>
<body>
  <div class="container">
    <form action="" method="post">
      <div class="row">
        <div class="form-group ${empty error ? '' : 'has-error'}">
          <div class="col-md-4">
            <input type="text" name="task" class="form-control" required="required"
              placeholder="What needs to be done?" />
          </div>
          <div class="col-md-4">
            <c:if test="${not empty error}">
              <span class="help-block"><c:out value="${error}" /></span>
            </c:if>
          </div>
        </div>
      </div>
    </form>

    <hr />

    <ul class="task-list">
      <c:forEach items="${tasks}" var="task">
        <li class="task-item">
          <div class="task-checkbox">
            <input type="checkbox" data-id="${task.id}" />
          </div>
          <div class="${task.done ? 'task-done' : ''}">
            <fmt:formatDate value="${task.creationDate}" pattern="dd/MM/yyyy HH:mm:ss" var="tooltip" />
            <span title="${tooltip}"> <c:out value="${task.text}" />
            </span>
          </div>
        </li>
      </c:forEach>
    </ul>
  </div>
</body>
</html>