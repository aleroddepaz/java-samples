<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<Configure id="Server" class="org.eclipse.jetty.server.Server">

	<Set name="sessionIdManager">
		<New id="jdbcidmgr" class="org.eclipse.jetty.server.session.JDBCSessionIdManager">
			<Arg>
				<Ref refid="Server" />
			</Arg>
			<Set name="workerName">fred</Set>
			<Call name="setDriverInfo">
				<Arg>com.mysql.jdbc.Driver</Arg>
				<Arg>jdbc:mysql://127.0.0.1:3306/sessions?user=jetty&amp;password=jetty</Arg>
			</Call>
			<Set name="scavengeInterval">10</Set>
		</New>
	</Set>
	
	<Call name="setAttribute">
		<Arg>jdbcIdMgr</Arg>
		<Arg>
			<Ref refid="jdbcidmgr" />
		</Arg>
	</Call>
	
</Configure>