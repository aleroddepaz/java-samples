<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <!-- Web security configuration -->

  <security-role>
    <description>Administrator user</description>
    <role-name>admin</role-name>
  </security-role>

  <security-role>
    <description>Guest user</description>
    <role-name>guest</role-name>
  </security-role>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Dynamic HTML pages</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>

  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>AuthRealm</realm-name>
    <form-login-config>
      <form-login-page>/login.html</form-login-page>
      <form-error-page>/login.html?error</form-error-page>
    </form-login-config>
  </login-config>

</web-app>